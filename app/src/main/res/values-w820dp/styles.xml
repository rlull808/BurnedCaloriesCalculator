<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textAppearance">@style/RadioTextSize</item>
        <item name="android:textAppearanceSmall">@style/SpinnerTextSize</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Theme customizations NOT specific to a particular API -->
    </style>

    <!-- Five custom styles -->
    <style name="TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditText" parent="@style/TextView" />

    <style name="Button" parent="@style/TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Label">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="TextView.Label.Indent">
        <item name="android:layout_marginLeft">10dp</item>
    </style>


    <style name="RadioTextSize" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SpinnerTextSize" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">24sp</item>
    </style>

</resources>
